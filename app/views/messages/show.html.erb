<h1><%=@message.title%></h1>

<% @messages.each do |x| %>
<%= x.content %>
<br>
<% end %>

<br>
<br>

<% if @current_user%>
  <%= form_for @message, url: content_path(@message) do |f| %>
    <%= f.text_field :content %>
    <%= f.submit 'Send Message' %>
  <% end %>
<% end  %>

<%= link_to  "Back to Event page", event_path(@message.event_id) %>